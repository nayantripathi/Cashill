<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/borrowerHomeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BorrowerFragment">


    <LinearLayout
        android:id="@+id/borrowerHomeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/layout_border"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/borrowerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="User Name"
            android:textColor="@color/pink"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/borrowerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Loan status"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/borrowerLoanAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="Loan amount"
            android:textColor="@color/pink"
            android:textSize="24sp" />

        <Button
            android:id="@+id/borrowerReturnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="24dp"
            android:background="@drawable/background_button"
            android:paddingHorizontal="32dp"
            android:text="Return"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/borrowerCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="24dp"
            android:background="@drawable/background_button"
            android:paddingHorizontal="32dp"
            android:text="Cancel"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>