<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/borrowerRequestLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RequestFragment">

    <Button
        android:id="@+id/borrowerCreateRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/background_button"
        android:padding="16dp"
        android:text="@string/lender_create_request_button"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/borrowerRequestPageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/layout_border"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/borrowerName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="User Name"
            android:textColor="@color/pink"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/borrowerMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Max Amount: 1000 Rs"
            android:textColor="@color/blue"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/borrowerInputAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:hint="Enter Amount"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp" />

        <EditText
            android:id="@+id/borrowerInputTenure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:hint="Enter tenure (In months)"
            android:inputType="number"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/borrowerRequestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="24dp"
            android:background="@drawable/background_button"
            android:paddingHorizontal="32dp"
            android:text="Request"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>